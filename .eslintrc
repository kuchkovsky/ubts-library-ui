{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": ["error", 2],
    "implicit-arrow-linebreak": 0,
    "arrow-parens": 0,
    "object-curly-newline": 0,
    "operator-linebreak": ["error", "after"],
    "no-console": 0
  },
  "globals": {
    "window": true,
    "document": true,
    "localStorage": true,
    "FileReader": true
  },
  "env": {
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
